<!DOCTYPE html>
<html>
<head>
    <title>Tạo Phiếu Mượn Thành Công</title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>
<body>
    <div class="container">
        <div class="header">
            <h1><i class="fas fa-check-circle"></i> Tạo Phiếu Mượn Thành Công</h1>
            <a href="/home" class="back-btn"><i class="fas fa-arrow-left"></i> Trở về Trang Chủ</a>
        </div>

        <div class="success-content">
            <table class="detail-table">
                <tr>
                    <th>Mã Phiếu Mượn:</th>
                    <td><%= loanTicket.LoanTicketID %></td>
                </tr>
                <tr>
                    <th>Độc Giả:</th>
                    <td><%= loanTicket.Reader.ReaderID %> - <%= loanTicket.Reader.FullName %></td>
                </tr>
                <tr>
                    <th>Sách Mượn:</th>
                    <td>
                        <ul class="book-list">
                            <% loanTicket.Books.forEach(function(book) { %>
                                <li><%= book.BookID %> - <%= book.Name %></li>
                            <% }); %>
                        </ul>
                    </td>
                </tr>
                <tr>
                    <th>Ngày Mượn:</th>
                    <td><%= new Date(loanTicket.StartDate).toLocaleDateString('vi-VN') %></td>
                </tr>
                <tr>
                    <th>Ngày Hẹn Trả:</th>
                    <td><%= new Date(loanTicket.DueDate).toLocaleDateString('vi-VN') %></td>
                </tr>
            </table>

            <div class="action-buttons">
                <a href="/loan-ticket/new" class="btn"><i class="fas fa-plus"></i> Tạo Phiếu Mới</a>
                <a href="/loan-ticket" class="btn"><i class="fas fa-list"></i> Danh Sách Phiếu Mượn</a>
            </div>
        </div>
    </div>
</body>
</html>