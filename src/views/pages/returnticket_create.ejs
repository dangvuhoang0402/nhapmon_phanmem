<!DOCTYPE html>
<html>
<head>
    <title>Tạo Phiếu Trả</title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <style>
        .container {
            max-width: 800px;
            margin: 0 auto;
            padding: 2rem;
        }
        .form-section {
            background: white;
            padding: 2rem;
            border-radius: 8px;
            box-shadow: 0 2px 15px rgba(0,0,0,0.1);
            margin-bottom: 2rem;
        }
        .form-group {
            margin-bottom: 1.5rem;
        }
        .form-group label {
            display: block;
            margin-bottom: 0.5rem;
            color: #2c3e50;
            font-weight: 500;
        }
        .form-group select {
            width: 100%;
            padding: 0.8rem;
            border: 1px solid #ddd;
            border-radius: 4px;
            transition: border-color 0.3s ease;
        }
        .form-group select:focus {
            border-color: #007bff;
            outline: none;
        }
        .book-item {
            padding: 1rem;
            border: 1px solid #eee;
            border-radius: 4px;
            margin-bottom: 1rem;
            display: flex;
            align-items: center;
            gap: 1rem;
            background: #f8f9fa;
        }
        .book-info {
            flex: 1;
        }
        .book-title {
            font-weight: 500;
            color: #2c3e50;
        }
        .book-meta {
            font-size: 0.9em;
            color: #6c757d;
            margin-top: 0.5rem;
        }
        .form-actions {
            display: flex;
            gap: 1rem;
            justify-content: flex-end;
            margin-top: 2rem;
        }
        .submit-btn, .reset-btn {
            padding: 0.8rem 1.5rem;
            border-radius: 4px;
            cursor: pointer;
            border: none;
            font-weight: 500;
            transition: all 0.3s ease;
        }
        .submit-btn {
            background: #28a745;
            color: white;
        }
        .reset-btn {
            background: #6c757d;
            color: white;
        }
        .submit-btn:hover, .reset-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        }
        .due-date {
            color: #dc3545;
            font-weight: 500;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="header">
            <h1><i class="fas fa-book-return"></i> Tạo Phiếu Trả</h1>
            <a href="/home" class="back-btn"><i class="fas fa-arrow-left"></i> Trở về Trang Chủ</a>
        </div>

        <form action="/return-ticket" method="POST" class="create-form">
            <div class="form-section">
                <h3><i class="fas fa-file-alt"></i> Thông Tin Phiếu Mượn</h3>
                <div class="form-group">
                    <label for="loanTicket">Phiếu Mượn *</label>
                    <select id="loanTicket" name="LoanTicketID" required onchange="handleLoanTicketChange(this)">
                        <option value="">Chọn phiếu mượn</option>
                        <% if (loanTickets && loanTickets.length > 0) { %>
                            <% loanTickets.forEach(function(ticket) { %>
                                <option value="<%= ticket._id %>" 
                                    data-books='<%= JSON.stringify(ticket.Books) %>'
                                    data-due-date="<%= ticket.DueDate %>">
                                    <%= ticket.LoanTicketID %> - 
                                    <%= ticket.Reader.FullName %> 
                                    (Ngày mượn: <%= new Date(ticket.StartDate).toLocaleDateString('vi-VN') %>)
                                </option>
                            <% }); %>
                        <% } %>
                    </select>
                </div>
            </div>

            <div id="bookDetails" class="form-section" style="display: none;">
                <h3><i class="fas fa-books"></i> Danh Sách Sách Trả</h3>
                <div id="booksList"></div>
            </div>

            <div class="form-actions">
                <button type="submit" class="submit-btn">
                    <i class="fas fa-save"></i> Tạo Phiếu
                </button>
                <button type="reset" class="reset-btn">
                    <i class="fas fa-undo"></i> Làm Mới
                </button>
            </div>
        </form>
    </div>

    <script>
        function handleLoanTicketChange(select) {
            const bookDetails = document.getElementById('bookDetails');
            const booksList = document.getElementById('booksList');
            
            if (select.value) {
                const option = select.selectedOptions[0];
                const books = JSON.parse(option.dataset.books);
                const dueDate = new Date(option.dataset.dueDate);
                
                booksList.innerHTML = books.map(book => `
                    <div class="book-item">
                        <div class="book-info">
                            <div class="book-title">${book.Name}</div>
                            <div class="book-meta">
                                Mã sách: ${book.BookID}<br>
                                Hạn trả: <span class="due-date">
                                    ${dueDate.toLocaleDateString('vi-VN')}
                                </span>
                            </div>
                        </div>
                        <input type="checkbox" name="ReturnedBooks[]" 
                               value="${book._id}">
                    </div>
                `).join('');
                
                bookDetails.style.display = 'block';
            } else {
                bookDetails.style.display = 'none';
                booksList.innerHTML = '';
            }
        }
        
        function validateForm() {
            const checkedBooks = document.querySelectorAll('input[name="ReturnedBooks[]"]:checked');
            if (checkedBooks.length === 0) {
                alert('Vui lòng chọn ít nhất một cuốn sách để trả');
                return false;
            }
            return true;
        }
        </script>
</body>
</html>